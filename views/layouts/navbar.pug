html
	head
		title #{title}
		link(rel='stylesheet',href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js")
		script(src="https://unpkg.com/@popperjs/core@2")
		link(rel="stylesheet", href="css/main.css")
		block css
	body
		nav.navbar
			ul.left-allign
				li home
				li today's status
				if(isLoggedIn)
					li forum
			ul.right-allign
				li 
					if(isLoggedIn)
						div.dropstart.btn-group 
							button.btn-primary.btn.dropdown-toggle(data-bs-toggle="dropdown" aria-expanded="false") #{user.username}
							ul.dropdown-menu
								li 
									a.dropdown-item(href="/profile") Profile 
								li
									a.dropdown-item(href="/new-post") Post!
								hr
								li
									a.dropdown-item(href="/logout") Logout
					else
						button(type="submit" onClick="window.location.href='/signup'") Signup
		.content
			block content
		footer 
			span Made with ❤️ by 
				span 
					a.myself(href="https://github.com/Rishi-Saraf") Rishi
		block script